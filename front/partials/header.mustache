<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login to your account!</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@200;400;500;700&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" type="text/css" href="css/saysomething.css" />
    <base href="/" />
    <script>
      function login() {
        const username = document.querySelector('input[name="username"]').value
        const password = document.querySelector('input[name="password"]').value
        const requestBody = {
          username: username,
          password: password,
        }

        fetch('http://localhost:3000/login', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(requestBody),
        })
          .then((response) => {
            return response.json()
          })
          .then((data) => {
            console.log('Response from server:', data)

            // Store data as a cookie
            document.cookie = `data=${JSON.stringify(data)}; path=/`
          })
          .catch((error) => {
            console.error('Error:', error)
          })
      }
    </script>
  </head>